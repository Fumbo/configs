[user]
    name = Louis Cadet
    email = cadet.louis@gmail.com

[color]
    ui = true

[core]
    excludesfile = ~/.gitignore

[alias]
    st = status
    ci = commit -a
    b = branch
    bt = branch --track
    co = checkout
    cob = checkout -b
    cobt = checkout -b --track
    d = diff
    l = log
    lp = log -p
    ls = log --stat
    lr = log --raw
    lg = log --graph
    lo = log --pretty=oneline
    f = fetch
    ph = push
    pl = pull
    r = remote
    rs = remote show
    ra = remote add
    rd = remote del
    lsf = ls-files
    m = merge
    cl = clean -fd
    t = tag
    ui = update-index
    all = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all

[pager]
    status = false
[push]
    default = simple
